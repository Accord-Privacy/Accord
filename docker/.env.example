# Accord Relay Server Configuration
# Copy this file to .env and customize for your deployment

# Server binding configuration
ACCORD_HOST=0.0.0.0
ACCORD_PORT=8080

# Database configuration (SQLite)
ACCORD_DB_PATH=/data/accord.db

# Node creation policy
# Options: open, invite-only, closed
ACCORD_NODE_CREATION_POLICY=open

# Logging level
RUST_LOG=info